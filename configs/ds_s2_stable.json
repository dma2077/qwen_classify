{
  "train_batch_size": 32,
  "train_micro_batch_size_per_gpu": 2,
  "gradient_accumulation_steps": 4,
  
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 1e-6,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },
  
  "scheduler": {
    "type": "WarmupCosineLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 1e-6,
      "warmup_num_steps": 100,
      "total_num_steps": 1000
    }
  },
  
  "fp16": {
    "enabled": false
  },
  
  "bf16": {
    "enabled": true
  },
  
  "zero_optimization": {
    "stage": 2,
    "allgather_partitions": true,
    "allgather_bucket_size": 5e8,
    "overlap_comm": true,
    "reduce_scatter": true,
    "reduce_bucket_size": 5e8,
    "contiguous_gradients": true,
    "cpu_offload": false
  },
  
  "gradient_clipping": 1.0,
  
  "steps_per_print": 20,
  "wall_clock_breakdown": false,
  
  "memory_breakdown": false,
  
  "dump_state": false,
  
  "logging": {
    "enabled": true,
    "level": "INFO"
  },
  
  "checkpoint": {
    "tag_validation": "Ignore"
  },
  
  "data_efficiency": {
    "enabled": false
  },
  
  "communication_data_type": "fp32",
  
  "aio": {
    "block_size": 1048576,
    "queue_depth": 8,
    "thread_count": 1,
    "single_submit": false,
    "overlap_events": true
  }
} 